<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001969">

    <ImageView
        android:id="@+id/gameOverImage"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:src="@drawable/imagem1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="Game Over" />

    <TextView
        android:id="@+id/gameOverTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GAME OVER"
        android:textColor="#FF0000"
        android:textSize="36sp"
        android:layout_below="@id/gameOverImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pontuação: 0"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_below="@id/gameOverTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/moneyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dinheiro Ganho: 0,00 €"
        android:textColor="#00FF00"
        android:textSize="20sp"
        android:layout_below="@id/scoreText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/restartButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Jogar Novamente"
        android:backgroundTint="#4CAF50"
        android:layout_below="@id/moneyText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/menuButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Voltar ao Menu"
        android:backgroundTint="#2196F3"
        android:layout_below="@id/restartButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>